{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Post</h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_dashboard') }}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="{{ path('admin_post') }}"><i class="fa fa-dashboard"></i> Post</a></li>
            <li class="active">Create</li>
        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Create</h3>
                <div class="box-tools">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('admin_post') }}" class="btn btn-default">
                                Back to the list
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-body">
                {{ form(form) }}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
    </script>

{% endblock %}